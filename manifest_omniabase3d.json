  "entrypoints": {
    "cli": "omniabase3d_engine.py",
    "examples": [
      "python omniabase3d_engine.py --bases 8 12 16 --steps 1000 --alpha 0.005",
      "python omniabase3d_engine.py --bases 6 10 14 --steps 5000 --alpha 0.001 --smooth 0.1 --seed 42"
    ],
    "args": {
      "--bases": "three integers >=2 (BX BY BZ)",
      "--steps": "int, default 1000",
      "--alpha": "float in (0,1], default 0.005 (divergence significance)",
      "--smooth": "float in (0,1], default 0.15 (EWMA)",
      "--seed": "int or null, default null",
      "--outdir": "string, default omniabase-3d/metrics"
    }
  },
  "signals": {
    "Cx": "coherence along X base",
    "Cy": "coherence along Y base",
    "Cz": "coherence along Z base",
    "I3": "normalized tensor <Cx,Cy,Cz>/||<Cx,Cy,Cz>||",
    "H3": "tanh((Cx*Cy*Cz)/(1+|∇C|))",
    "Δ3(divergence)": "|(I3_t - I3_{t-1})•1|",
    "τ(alpha)": "-ln(alpha)"
  },
  "outputs": {
    "tensor_csv": "metrics/tensor_I3.csv",
    "surface_csv": "metrics/surface_H3.csv",
    "metrics_json": "metrics/metrics.json"
  },
  "metrics": [
    "mean_coherence",
    "mean_divergence",
    "mean_surprisal",
    "mean_H3",
    "accept_ratio_divergence"
  ],
