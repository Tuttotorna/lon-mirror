def plot_multi_base_heatmap(n: int, bases=None):
    """
    Simple heatmap for digit patterns of n across multiple bases.
    Each row = digits of n in a given base.
    """
    if bases is None:
        bases = list(range(2, 17))  # keep it compact for visualization

    digit_rows = [to_base(n, b) for b in bases]
    max_len = max(len(row) for row in digit_rows)

    # left-pad with zeros to form rectangular matrix
    mat = np.zeros((len(bases), max_len), dtype=float)
    for i, row in enumerate(digit_rows):
        mat[i, -len(row):] = row  # right-align digits

    plt.figure(figsize=(8, 4))
    plt.imshow(mat, aspect="auto")
    plt.colorbar(label="digit value")
    plt.yticks(range(len(bases)), [f"b{b}" for b in bases])
    plt.xticks([])
    plt.title(f"Digit patterns of n={n} across bases")
    plt.tight_layout()
    plt.show()


@interact(n=IntText(7853, description='Test number:'))
def demo(n):
    if n < 2:
        print("n must be ≥ 2")
        return

    bases = list(range(2, 33))
    score = pbii_score(n, bases=bases, window=100)
    prime_flag = is_prime_naive(n)

    print(f"n = {n}")
    print(f"PBII-like score = {score:.6f} → {'PRIME' if prime_flag else 'COMPOSITE'}")
    print(f"Global symmetry Σ(n) = {Sigma(n, bases=bases):.6f}")
    print(f"Truth (naive check): {'PRIME' if prime_flag else 'COMPOSITE'}")

    plot_multi_base_heatmap(n, bases=list(range(2, 17)))


# ─────────────────────────────────────────────────────────────
# OPTIONAL: BENCHMARK SECTION (USING PRECOMPUTED DATA)
# ─────────────────────────────────────────────────────────────
#
# This assumes you have already computed and saved:
#   - pbii_scores.npy  (array of floats PBII[n])
#   - is_prime.npy     (array of 0/1 primality labels)
#
# Shape convention: index = n, e.g. from n=0..N or 2..N.

def benchmark_from_npy(pbii_path="pbii_scores.npy", prime_path="is_prime.npy"):
    if not (os.path.exists(pbii_path) and os.path.exists(prime_path)):
        print("No .npy benchmark files found. Skip benchmark.")
        return

    from sklearn.metrics import roc_curve, auc

    pbii = np.load(pbii_path)
    is_prime = np.load(prime_path)

    # assume pbii[0:2] maybe dummy; restrict to n ≥ 2
    n0 = 2
    pbii = pbii[n0:]
    is_prime = is_prime[n0:]

    print(f"Loaded {len(pbii)} entries from {pbii_path}")
    print(f"Primes: {is_prime.sum()}, composites: {len(is_prime) - is_prime.sum()}")

    fpr, tpr, thr = roc_curve(is_prime, pbii)
    roc_auc = auc(fpr, tpr)
    print(f"AUC(PBII vs primality) = {roc_auc:.6f}")

    # Plot ROC
    plt.figure(figsize=(5, 5))
    plt.plot(fpr, tpr, label=f"PBII (AUC={roc_auc:.3f})", lw=2)
    plt.plot([0, 1], [0, 1], "--", lw=1, color="gray", label="random")
    plt.xlabel("False Positive Rate")
    plt.ylabel("True Positive Rate")
    plt.title("PBII ROC curve (precomputed data)")
    plt.legend(loc="lower right")
    plt.tight_layout()
    plt.show()

    # Histogram for primes vs composites
    pbii_primes = pbii[is_prime == 1]
    pbii_comps = pbii[is_prime == 0]

    p99 = np.quantile(pbii_primes, 0.99)
    c99 = np.quantile(pbii_comps, 0.99)
    xmax = max(p99, c99)

    plt.figure(figsize=(7, 4))
    plt.hist(pbii_comps[pbii_comps <= xmax], bins=100, alpha=0.5, density=True, label="composites")
    plt.hist(pbii_primes[pbii_primes <= xmax], bins=100, alpha=0.5, density=True, label="primes")
    plt.xlabel("PBII")
    plt.ylabel("Density")
    plt.title("PBII distribution (primes vs composites)")
    plt.legend()
    plt.tight_layout()
    plt.show()


