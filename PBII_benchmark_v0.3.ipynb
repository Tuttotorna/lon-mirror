# ─────────────────────────────────────────────────────────────
# CORE UTILITIES
# ─────────────────────────────────────────────────────────────

def to_base(n: int, b: int):
    """
    Convert integer n to base-b digits (most significant first).
    """
    if n == 0:
        return [0]
    digits = []
    x = n
    while x > 0:
        digits.append(x % b)
        x //= b
    return digits[::-1]


def digit_entropy(digits, b: int):
    """
    Shannon entropy of digit distribution in base b, normalized in [0,1].
    """
    L = len(digits)
    counts = [0] * b
    for d in digits:
        counts[d] += 1
    probs = [c / L for c in counts if c > 0]
    H = -sum(p * math.log(p) for p in probs)
    H_norm = H / math.log(b)
    return H_norm  # in [0,1]


def sigma_b(n: int, b: int):
    """
    Base symmetry score σ_b(n) – version 0.2:
      σ_b(n) = (1/L)(1 - H_norm) + 0.5 * I[n mod b == 0]
    where:
      L      = number of digits in base b
      H_norm = normalized Shannon entropy of digit distribution
    """
    digits = to_base(n, b)
    L = len(digits)
    Hn = digit_entropy(digits, b)
    base_term = (1.0 - Hn) / L
    div_bonus = 0.5 if (n % b == 0) else 0.0
    return base_term + div_bonus


def instability_profile(n: int, bases=None):
    """
    Return the per-base symmetry scores σ_b(n) for all bases in 'bases'.
    Instability can be interpreted as low symmetry, i.e. 1 - σ_b(n) (if needed).
    """
    if bases is None:
        bases = list(range(2, 33))
    sigmas = [sigma_b(n, b) for b in bases]
    return np.array(sigmas, dtype=float)


def Sigma(n: int, bases=None):
    """
    Global symmetry Σ(n) = average over σ_b(n) across bases.
    """
    prof = instability_profile(n, bases=bases)
    return float(prof.mean())


def is_prime_naive(n: int) -> bool:
    """
    Simple primality check for demo (not optimized, but ok for interactive use).
    """
    if n < 2:
        return False
    if n in (2, 3):
        return True
    if n % 2 == 0:
        return False
    r = int(n**0.5)
    for k in range(3, r + 1, 2):
        if n % k == 0:
            return False
    return True


def pbii_score(n: int, bases=None, window: int = 100):
    """
    Local PBII-like score for a single n, computed on the fly:

      PBII(n) ≈ Sat(n) - Σ(n)

    where:
      Σ(n)  = average σ_b(n) over bases
      Sat(n)= mean Σ(k) over composites in [n-window, n)

    This is a local approximation of the full PBII definition,
    sufficient for interactive experimentation.
    """
    if bases is None:
        bases = list(range(2, 33))

    # Σ(n)
    sigma_n = Sigma(n, bases=bases)

    # composite saturation before n
    start = max(2, n - window)
    vals = []
    for k in range(start, n):
        if not is_prime_naive(k):
            vals.append(Sigma(k, bases=bases))
    if not vals:
        sat = sigma_n
    else:
        sat = float(sum(vals) / len(vals))

    return sat - sigma_n


